<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FORMULARIO DE INSCRIPCIÃ“N"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

        <View
            android:id="@+id/separador1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_below="@id/titulo" />

        <EditText
            android:id="@+id/nombre"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/separador1"
            android:layout_marginTop="20dp"
            android:hint="Nombre" />

        <EditText
            android:id="@+id/apellido"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombre"
            android:hint="Apellido" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/apellido"
            android:layout_marginTop="15dp"
            android:id="@+id/radio_group_sexo"
            android:checkedButton="@+id/sexo">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/femenino"
                android:text="Femenino" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/masculino"
                android:text="Masculino" />

        </RadioGroup>

        <EditText
            android:id="@+id/pais"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio_group_sexo"
            android:layout_marginTop="5dp"
            android:hint="Nacionalidad" />

        <EditText
            android:id="@+id/provincia"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pais"
            android:layout_marginTop="5dp"
            android:hint="Provincia" />

        <EditText
            android:id="@+id/localidad"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/provincia"
            android:layout_marginTop="5dp"
            android:hint="Localidad" />

        <Button
            android:id="@+id/registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_below="@id/localidad"
            android:text="REGISTRAR"
            android:enabled="true"
            android:background="#D0F5A9" />

    </RelativeLayout>
</ScrollView>